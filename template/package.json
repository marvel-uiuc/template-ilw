{
    "name": "@illinois-toolkit/<%= name %>",
    "description": "One paragraph description of the component.",
    "repository": "github:<%= repository %>",
    "private": false,
    "license": "MIT",
    "version": "0.0.1",
    "type": "module",
    "files": [
        "src/**",
        "dist/**",
        "builder/**"
    ],
    "exports": {
        ".": {
            "import": "./dist/<%= name %>.js",
            "require": "./dist/<%= name %>.cjs",
            "default": "./dist/<%= name %>.js"
        },
        "./<%= name %>.css": {
            "import": "./dist/<%= name %>.css"
        }
    },
    "main": "./dist/<%= name %>.js",
    "module": "./dist/<%= name %>.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
        "preview": "vite preview",
        "prepack": "npm run build",
        "test:axe": "playwright test",
        "test:axe:github": "playwright test --config playwright.ci.config.ts",
        "test": "vitest run --browser.headless",
        "test:browser": "vitest watch --browser chromium"
    },
    "dependencies": {
        "lit": "3.1.3"
    },
    "devDependencies": {
        "@illinois-toolkit/ilw-core": "^1.0.2",
        "@playwright/test": "^1.54.1",
        "@vitest/browser": "^3.2.4",
        "vitest-browser-lit": "^0.1.0",
        "playwright": "^1.54.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.3",
        "vite-plugin-dts": "^4.5.4"
    }
}